{% extends "layout.html.twig" %}

{% block title %} gestion des voitures {% endblock %}

{% block content %}
<a href='{{path('admin_app_voiture_add')}}'>ajouter une nouvelle voiture </a>
<table class="table text-center ">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">modele</th>
      <th scope="col">couleur</th>
      <th scope="col">nbPortes</th>
      <th scope="col">photos</th>
      <th scope="col">annee</th>
      <th scope="col">prix</th>
      <th scope="col">stock</th>
      <th scope="col">Marque</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
   {% for voiture in voitures %}
    

    <tr>
      <td>{{voiture.id}}</td>
      <td>{{voiture.modele}}</td>
      {# <td>{{voiture.marque.nom}}</td>  #}
      <td>{{voiture.couleur}}</td>
      <td>{{voiture.nbPortes}}</td>
      <td><img class="img-thumbnail" src="{{asset('photos/voiture/'~ voiture.photos)}}" alt="{{voiture.modele}}">
      </td>
      <td>{{voiture.annee}}</td>
      <td>{{voiture.prix}}</td>
      <td>{{voiture.stock}}</td>
      <td>{{voiture.marque.nom}}</td>
      <td>
        <a href="{{ path('admin_app_voiture_details' ,{id: voiture.id}) }}"> <i class="fas fa-eye mx-1 text-primary"></i></a>
        <a href="{{ path('admin_app_voiture_update' ,{id: voiture.id})}}"> <i class="fas fa-edit mx-1 text-success"></i></a>
        <a href="{{path('admin_app_voiture_delete',{id: voiture.id})}}"> 
         <i onclick="return confirm('êtes vous sûr de vouloir supprimer la voiture ?')"> <i class="fas fa-trash mx-1 text-danger"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}