{% extends "layout.html.twig" %}

{% block title %}liste marque admin{% endblock %}


{% block content %}
 <h1>liste des marques</h1>
   <table class="table text-center">
        <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for  marque in marques %}    
                <tr>
                    <td>{{ marque.nom }}</td>
                   
                    <td>
                        <a href="{{ path('admin_app_marque_update',{slug: marque.slug})}}">
						    <i class="fas fa-edit mx-1 text-primary"></i>
                        </a>
                        <a href="{{ path('admin_app_marque_delete',{id: marque.id})}}"  onClick="return confirm('êtes vous sûr de vouloir supprimer la marque ?')" >
                            <i class="fas fa-trash mx-1 text-danger"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


{% endblock %}